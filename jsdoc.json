{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": [
            "jsdoc"
        ]
    },
    "source": {
        "include": [
            "lib",
            "README.md"
        ],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": true,
        "useLongnameInNav": false,
        "showInheritedInNav": true,
        "search": true,
        "default": {
            "staticFiles": {
              "include": [
                  "./static"
              ]
            }
        },
        "resources": {
            "google": "https://rahmancam.github.io/koriko/"
        },
        "better-docs": {
            "name": "Koriko Documentation",
            "title": "Koriko Documentation",
            "hideGenerator": true,
            "navLinks": [
                {
                    "label": "Github Project",
                    "href": "https://github.com/rahmancam/koriko",
                    "target": "_blank"
                },
                {
                    "label": "Live Demo",
                    "href": "https://koriko.netlify.app",
                    "target": "_blank"
                }
            ]
        }
    },
    "opts": {
        "destination": "./docs/",
        "encoding": "utf8",
        "private": true,
        "recurse": true,
        "template": "./node_modules/better-docs"
    }
}